{% extends 'admin/layout.njk' %}
    {% block style %}
        <title>Foodfy - Receitas</title>
    {% endblock style %}
    {% block content %}
        <main>
            <section class="foods">
                <h2>Gerenciar receitas</h2>
                <div class="cards">
                {% for recipe in recipes %}
                    <div id="{{recipe.id}}" class="card">
                        <section class="card-img" style="background: url({{recipe.image}}) no-repeat center center / cover"></section>
                        <section class="card-description">
                            <h3>{{recipe.title}}</h3>
                            <p id="author">
                            {{recipe.name}}</p>
                            <a href="/admin/recipes/{{recipe.id}}">Visualizar</a>
                        </section>
                    </div>
                {% endfor %}
                </div>
            </section>
        </main>
    {% endblock content %}
