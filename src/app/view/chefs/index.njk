{% extends 'chefs/layout.njk' %}
{% block content %}
    <main>
        <section class="cards-chefs">
            <div class="title">Gerenciar Receitas</div>
            <section class="chefs">
                {% for chef in chefs %}
                <div class="chef">
                    <div class="chef-image" style="background: url({{chef.avatar_url}}) no-repeat center center / cover"></div>
                    <div class="chef-information">
                        <div class="chef-name">{{chef.name}}</div>
                        <a href="/admin/chefs/{{chef.id}}">Visualizar</a>
                    </div>
                </div>
                {% endfor %}
            </section>
        </section>
    </main>
{% endblock content %}