{% extends 'chefs/layout.njk' %}
{% block content %}
<main>
    <div class="cards-chefs">
        <div class="card-chef">
            <div class="card-title head">
                <div>Chef: {{chef.name}}</div>
                <div id="edit">
                    <a href="/admin/chefs/{{chef.id}}/edit">Editar Chef</a>
                </div>
            </div>
            <div class="card-img-chef">
                <div class="img-chef" style="background: url({{chef.avatar_url}}) no-repeat center center / cover">
                </div>
                <div class="name-chef">
                    <h2>{{chef.name}}</h2>
                    <p>{{chef.total_recipes}} Receitas</p>
                </div>
            </div>
            <section class="recipes">
                <div>Receitas</div>
                <div class="card-receitas">
                    {% for recipe in recipes %}
                    {% if recipe.chef_id == chef.id %}
                    <div class="receita">
                        <div class="img-receita"
                        style="background: url({{recipe.image}}) no-repeat center center / cover"
                        >    
                        </div>
                        <div class="img-info">
                            <h3>{{recipe.title}}</h3>
                            <p>Por: {{chef.name}}</p>
                            <a href="/admin/recipes/{{recipe.id}}">Visualizar</a>
                        </div>
                    </div>
                    <input type="hidden" name="id" value="{{recipe.chef_id}}">

                    {% endif %}
                    {% endfor %}
                </div>
            </section>
        </div>
    </div>
</main>
{% endblock content %}